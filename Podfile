  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  pod 'SVProgressHUD'
  pod 'Firebase'
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'ChameleonFramework'
  # Pods for Probbase
  target 'ProbbaseTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ProbbaseUITests' do
    inherit! :search_paths
    # Pods for testing
  end
end
